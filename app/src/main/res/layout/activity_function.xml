<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_4"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="2dp"
       android:orientation="horizontal">

      <TextView
          android:id="@+id/about_info"
          android:layout_width="126dp"
          android:layout_height="30dp"
          android:layout_marginRight="50dp"
          android:background="@drawable/pic_3"
          android:textColor="#666666"
          android:textSize="25dp" />

      <TextView
          android:layout_width="293dp"
          android:layout_height="match_parent"
          android:layout_marginRight="293dp"
          android:text="张三  123456"
          android:textSize="20dp" />


   </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="22dp"
       android:layout_marginTop="2dp"
       android:orientation="horizontal"
       android:paddingLeft="50dp">

      <TextView
          android:layout_width="50dp"
          android:layout_height="22dp"
          android:text="@string/command_effect"
          android:textColor="@color/black"
          android:textSize="16dp" />

      <Spinner
          android:id="@+id/effect_spinner"
          android:layout_width="50dp"
          android:layout_height="22dp"
          android:layout_marginTop="0dp"
          android:background="#FFBB86FC"
          android:entries="@array/effect_array" />

      <Spinner
          android:id="@+id/effect_param_spinner"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:entries="@array/effect_param_array"
          android:visibility="gone" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="173dp"
       android:layout_marginTop="10dp"
       android:orientation="vertical"
       android:paddingLeft="40dp"
       android:paddingRight="50dp">

      <Button
          android:id="@+id/start_send"
          android:layout_width="147dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:text="@string/send_data"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/playtext"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="5dp"
          android:gravity="left|top"
          android:hint="请输入你想发送的信息"
          android:textColor="@color/black"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />

      <View
          android:layout_width="match_parent"
          android:layout_height="3px"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:background="?android:attr/listDivider" />
   </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="3px"
       android:layout_marginTop="8dp"
       android:layout_marginBottom="8dp"
       android:background="?android:attr/listDivider" />

   <LinearLayout
       android:layout_width="395dp"
       android:layout_height="200dp"

       android:orientation="vertical"
       android:paddingLeft="40dp"
       android:paddingRight="50dp">

      <Button
          android:id="@+id/start_listen"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:text="@string/start_listen"
          android:textSize="20dp" />

      <TextView
          android:id="@+id/reg_status"
          android:layout_width="match_parent"
          android:layout_height="33dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="5dp" />

      <TextView
          android:id="@+id/regtext"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:hint="暂未识别到信息"
          android:scrollbars="vertical"
          android:singleLine="false"
          android:textColor="@color/white"
          android:textColorHint="@color/white"
          android:textSize="20sp" />
   </LinearLayout>

   <ImageView
       android:id="@+id/qrCode"
       android:layout_width="280dp"
       android:layout_height="280dp"
       android:layout_gravity="center">

   </ImageView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="10dp"
       android:orientation="horizontal">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:layout_marginBottom="10dp"
          android:gravity="center"
          android:scrollbars="vertical"
          android:singleLine="false"
          android:text="@string/copyright"
          android:textColor="#666666" />
   </LinearLayout>
</LinearLayout>